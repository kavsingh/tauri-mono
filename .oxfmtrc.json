{
	"$schema": "./node_modules/oxfmt/configuration_schema.json",
	"ignorePatterns": [
		"pnpm-*.yaml",
		"**/.nx/**",
		"**/dist/**",
		"**/gen/**",
		"**/dist-*/**",
		"**/reports/**",
		"**/__generated__/**",
		"!**/__generated__/mocks/**"
	],
	"printWidth": 80,
	"useTabs": true,
	"experimentalSortImports": {
		"order": "asc",
		"groups": [
			["builtin"],
			["external"],
			["internal"],
			["parent"],
			["sibling", "index"],
			["type"]
		]
	}
}
