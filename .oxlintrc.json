{
	"$schema": "./node_modules/oxlint/configuration_schema.json",
	"ignorePatterns": [
		".vscode/*",
		".nx/*",
		".temp/*",
		"target/*",
		"apps/*",
		"packages/*"
	],
	"plugins": ["oxc", "eslint", "import", "unicorn", "promise"],
	"categories": {
		"correctness": "error",
		"suspicious": "error",
		"pedantic": "warn",
		"restriction": "warn",
		"perf": "warn",
		"style": "warn",
		"nursery": "warn"
	},
	"env": { "node": true },
	"rules": {
		"eslint/arrow-body-style": "off",
		"eslint/capitalized-comments": "off",
		"eslint/curly": ["warn", "multi-line", "consistent"],
		"eslint/eqeqeq": "error",
		"eslint/id-length": "off",
		"eslint/func-style": [
			"warn",
			"declaration",
			{ "allowTypeAnnotation": true }
		],
		"eslint/max-classes-per-file": "off",
		"eslint/max-lines-per-function": [
			"warn",
			{ "skipBlankLines": true, "skipComments": true }
		],
		"eslint/no-console": "off",
		"eslint/no-continue": "off",
		"eslint/no-duplicate-imports": [
			"warn",
			{ "allowSeparateTypeImports": true }
		],
		"eslint/no-implicit-coercion": ["warn", { "allow": ["!!"] }],
		"eslint/no-inline-comments": ["error", { "ignorePattern": "@type" }],
		"eslint/no-magic-numbers": "off",
		"eslint/no-plusplus": ["warn", { "allowForLoopAfterthoughts": true }],
		"eslint/no-ternary": "off",
		"eslint/no-undefined": "off",
		"eslint/no-unused-vars": [
			"warn",
			{
				"args": "all",
				"argsIgnorePattern": "^_",
				"caughtErrors": "all",
				"caughtErrorsIgnorePattern": "^_",
				"destructuredArrayIgnorePattern": "^_",
				"varsIgnorePattern": "^_",
				"ignoreRestSiblings": true
			}
		],
		"eslint/no-void": ["error", { "allowAsStatement": true }],
		"eslint/no-warning-comments": ["warn", { "terms": ["fixme", "revert"] }],
		"eslint/sort-imports": "off",
		"eslint/sort-keys": "off",
		"import/group-exports": "off",
		"import/exports-last": "off",
		"import/extensions": "off",
		"import/max-dependencies": "off",
		"import/no-default-export": "error",
		"import/no-named-export": "off",
		"import/no-unassigned-import": ["warn", { "allow": ["**/*.css"] }],
		"import/prefer-default-export": "off",
		"oxc/no-async-await": "off",
		"oxc/no-optional-chaining": "off",
		"oxc/no-rest-spread-properties": "off",
		"unicorn/catch-error-name": ["error", { "name": "cause" }],
		"unicorn/no-array-reduce": "off",
		"unicorn/no-useless-undefined": "off"
	},
	"overrides": [
		{
			"files": ["**/typings/*.d.ts"],
			"rules": {
				"import/unambiguous": "off"
			}
		},
		{
			"files": ["*.config.{js,ts}"],
			"rules": {
				"import/no-default-export": "off",
				"import/no-anonymous-default-export": "off"
			}
		},
		{
			"files": ["**/*.{ts,tsx}"],
			"plugins": ["typescript"],
			"rules": {
				"typescript/consistent-type-imports": [
					"warn",
					{ "fixStyle": "separate-type-imports", "prefer": "type-imports" }
				],
				"typescript/explicit-function-return-type": "off",
				"typescript/no-non-null-assertion": "error",
				"typescript/promise-function-async": "off",
				"typescript/restrict-template-expressions": [
					"error",
					{ "allowNumber": true }
				],
				"typescript/strict-boolean-expressions": "off",
				"typescript/switch-exhaustiveness-check": ["warn", {
					"allowDefaultCaseForExhaustiveSwitch": true,
					"considerDefaultExhaustiveForUnions": true,
					"requireDefaultForNonUnion": true
				}]
			}
		}
	]
}
