{
	"name": "app",
	"description": "a tauri app",
	"version": "1.0.0-dev.0",
	"type": "module",
	"license": "MIT",
	"scripts": {
		"tdd:ui": "vitest",
		"test": "pnpm test:tauri && pnpm test:ui",
		"test:ci": "pnpm test:ui --silent --coverage",
		"test:ui": "vitest run",
		"test:tauri": "cd src-tauri && cargo test",
		"typecheck": "tsc",
		"lint": "eslint .",
		"before:dev": "pnpm build:isolation && vite dev",
		"before:build": "pnpm build:isolation && rimraf ./dist && vite build",
		"dev": "tauri dev",
		"build:mac": "tauri build --target universal-apple-darwin",
		"build:win": "tauri build --target x86_64-pc-windows-msvc",
		"build:isolation": "rimraf ./dist-isolation && vite -c vite.isolation.config.ts build",
		"testscript": "node --experimental-strip-types scripts/testscript.ts"
	},
	"dependencies": {
		"@solidjs/router": "0.15.1",
		"@tanstack/solid-query": "5.61.5",
		"@tauri-apps/api": "2.1.1",
		"@tauri-apps/plugin-dialog": "2.0.1",
		"@tauri-apps/plugin-log": "2.0.0",
		"solid-js": "1.9.3",
		"tailwind-variants": "0.3.0"
	},
	"devDependencies": {
		"@solidjs/testing-library": "0.8.10",
		"@tauri-apps/cli": "2.1.0",
		"@testing-library/dom": "10.4.0",
		"@testing-library/jest-dom": "6.6.3",
		"@testing-library/user-event": "14.5.2",
		"@tsconfig/vite-react": "3.4.0",
		"@types/eslint-plugin-tailwindcss": "3.17.0",
		"@vitejs/plugin-legacy": "6.0.0",
		"@vitest/coverage-v8": "2.1.6",
		"autoprefixer": "10.4.20",
		"caniuse-lite": "1.0.30001684",
		"eslint-plugin-jest-dom": "5.5.0",
		"eslint-plugin-solid": "0.14.4",
		"eslint-plugin-tailwindcss": "3.17.5",
		"eslint-plugin-testing-library": "7.0.0",
		"eslint-plugin-vitest": "0.5.4",
		"jsdom": "25.0.1",
		"postcss": "8.4.49",
		"tailwindcss": "3.4.15",
		"terser": "5.36.0",
		"vite": "5.4.11",
		"vite-plugin-checker": "0.8.0",
		"vite-plugin-solid": "2.11.0",
		"vite-tsconfig-paths": "5.1.3",
		"vitest": "2.1.6",
		"vitest-canvas-mock": "0.3.3"
	}
}
