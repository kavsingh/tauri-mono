{
	"name": "app",
	"version": "1.0.0-dev.0",
	"description": "a tauri app",
	"license": "MIT",
	"type": "module",
	"scripts": {
		"tdd:ui": "vitest",
		"test": "pnpm test:tauri && pnpm test:ui",
		"test:ci": "pnpm test:ui --silent --coverage",
		"test:ui": "vitest run",
		"test:tauri": "cd src-tauri && cargo test",
		"lint": "pnpm lint:ui",
		"lint:ui": "conc 'oxlint --type-aware --type-check --max-warnings=0' 'eslint . --max-warnings=0' 'oxfmt --check'",
		"lint:tauri": "cargo clippy --all-targets --all-features",
		"before:dev": "pnpm build:isolation && vite dev",
		"before:build": "pnpm build:isolation && rimraf ./dist && vite build",
		"dev": "tauri dev",
		"build:mac": "tauri build --target universal-apple-darwin",
		"build:win": "tauri build --target x86_64-pc-windows-msvc",
		"build:isolation": "rimraf ./dist-isolation && vite -c vite.isolation.config.ts build",
		"testscript": "node scripts/testscript.ts"
	},
	"dependencies": {
		"@solidjs/router": "0.15.4",
		"@tanstack/solid-query": "5.90.23",
		"@tauri-apps/api": "2.9.1",
		"@tauri-apps/plugin-dialog": "2.6.0",
		"@tauri-apps/plugin-log": "2.8.0",
		"@tauri-apps/plugin-store": "2.4.2",
		"solid-js": "1.9.11",
		"tailwind-merge": "3.4.0",
		"tailwind-variants": "3.2.2"
	},
	"devDependencies": {
		"@solidjs/testing-library": "0.8.10",
		"@tailwindcss/vite": "4.1.18",
		"@tauri-apps/cli": "2.9.6",
		"@testing-library/dom": "10.4.1",
		"@testing-library/jest-dom": "6.9.1",
		"@testing-library/user-event": "14.6.1",
		"@tsconfig/vite-react": "7.0.2",
		"@types/eslint": "9.6.1",
		"@vitejs/plugin-legacy": "7.2.1",
		"@vitest/coverage-v8": "4.0.18",
		"@vitest/eslint-plugin": "1.6.6",
		"caniuse-lite": "1.0.30001766",
		"eslint": "9.39.2",
		"eslint-plugin-better-tailwindcss": "4.0.1",
		"eslint-plugin-jest-dom": "5.5.0",
		"eslint-plugin-solid": "0.14.5",
		"eslint-plugin-testing-library": "7.15.4",
		"jsdom": "27.4.0",
		"tailwindcss": "4.1.18",
		"terser": "5.46.0",
		"tw-animate-css": "1.4.0",
		"typescript-eslint": "8.53.1",
		"vite": "7.3.1",
		"vite-plugin-checker": "0.12.0",
		"vite-plugin-solid": "2.11.10",
		"vite-tsconfig-paths": "6.0.5",
		"vitest": "4.0.18",
		"vitest-canvas-mock": "1.1.3"
	}
}
