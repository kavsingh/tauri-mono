{
	"name": "app",
	"description": "a tauri app",
	"version": "1.0.0-dev.0",
	"type": "module",
	"license": "MIT",
	"scripts": {
		"tdd:ui": "vitest",
		"test": "pnpm test:tauri && pnpm test:ui",
		"test:ci": "pnpm test:ui --silent --coverage",
		"test:ui": "vitest run",
		"test:tauri": "cd src-tauri && cargo test",
		"typecheck": "tsc",
		"lint": "eslint --flag unstable_ts_config .",
		"before:dev": "pnpm build:isolation && vite dev",
		"before:build": "pnpm build:isolation && rimraf ./dist && vite build",
		"dev": "tauri dev",
		"build:mac": "tauri build --target universal-apple-darwin",
		"build:win": "tauri build --target x86_64-pc-windows-msvc",
		"build:isolation": "rimraf ./dist-isolation && vite -c vite.isolation.config.ts build",
		"testscript": "node --import=tsx scripts/testscript.ts"
	},
	"dependencies": {
		"@solidjs/router": "0.14.3",
		"@tanstack/solid-query": "5.54.2",
		"@tauri-apps/api": "1.6.0",
		"solid-js": "1.8.22",
		"tailwind-variants": "0.2.1"
	},
	"devDependencies": {
		"@solidjs/testing-library": "0.8.9",
		"@tauri-apps/cli": "1.6.1",
		"@testing-library/dom": "10.4.0",
		"@testing-library/jest-dom": "6.5.0",
		"@testing-library/user-event": "14.5.2",
		"@tsconfig/vite-react": "3.0.2",
		"@vitejs/plugin-legacy": "5.4.2",
		"@vitest/coverage-v8": "2.0.5",
		"autoprefixer": "10.4.20",
		"caniuse-lite": "1.0.30001658",
		"eslint-plugin-jest-dom": "5.4.0",
		"eslint-plugin-solid": "0.14.3",
		"eslint-plugin-tailwindcss": "3.17.4",
		"eslint-plugin-testing-library": "6.3.0",
		"eslint-plugin-vitest": "0.5.4",
		"jsdom": "25.0.0",
		"postcss": "8.4.45",
		"tailwindcss": "3.4.10",
		"terser": "5.31.6",
		"vite": "5.4.3",
		"vite-plugin-checker": "0.8.0",
		"vite-plugin-solid": "2.10.2",
		"vite-tsconfig-paths": "5.0.1",
		"vitest": "2.0.5",
		"vitest-canvas-mock": "0.3.3"
	}
}
