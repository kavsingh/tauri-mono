{
	"name": "app",
	"description": "a tauri app",
	"version": "1.0.0-dev.0",
	"type": "module",
	"license": "MIT",
	"scripts": {
		"tdd:ui": "vitest",
		"test": "pnpm test:tauri && pnpm test:ui",
		"test:ci": "pnpm test:ui --silent --coverage",
		"test:ui": "vitest run",
		"test:tauri": "cd src-tauri && cargo test",
		"lint": "tsc && eslint .",
		"before:dev": "pnpm build:isolation && vite dev",
		"before:build": "pnpm build:isolation && rimraf ./dist && vite build",
		"dev": "tauri dev",
		"build:mac": "tauri build --target universal-apple-darwin",
		"build:win": "tauri build --target x86_64-pc-windows-msvc",
		"build:isolation": "rimraf ./dist-isolation && vite -c vite.isolation.config.ts build",
		"testscript": "node scripts/testscript.ts"
	},
	"dependencies": {
		"@solidjs/router": "0.15.3",
		"@tanstack/solid-query": "5.66.9",
		"@tauri-apps/api": "2.2.0",
		"@tauri-apps/plugin-dialog": "2.2.0",
		"@tauri-apps/plugin-log": "2.2.1",
		"solid-js": "1.9.4",
		"tailwind-variants": "0.3.1"
	},
	"devDependencies": {
		"@solidjs/testing-library": "0.8.10",
		"@tauri-apps/cli": "2.2.7",
		"@testing-library/dom": "10.4.0",
		"@testing-library/jest-dom": "6.6.3",
		"@testing-library/user-event": "14.6.1",
		"@tsconfig/vite-react": "3.4.0",
		"@types/eslint-plugin-tailwindcss": "3.17.0",
		"@vitejs/plugin-legacy": "6.0.1",
		"@vitest/coverage-v8": "3.0.6",
		"autoprefixer": "10.4.20",
		"caniuse-lite": "1.0.30001700",
		"eslint-plugin-jest-dom": "5.5.0",
		"eslint-plugin-solid": "0.14.5",
		"eslint-plugin-tailwindcss": "3.18.0",
		"eslint-plugin-testing-library": "7.1.1",
		"eslint-plugin-vitest": "0.5.4",
		"jsdom": "26.0.0",
		"postcss": "8.5.3",
		"tailwindcss": "3.4.17",
		"terser": "5.39.0",
		"vite": "6.1.1",
		"vite-plugin-checker": "0.9.0",
		"vite-plugin-solid": "2.11.2",
		"vite-tsconfig-paths": "5.1.4",
		"vitest": "3.0.6",
		"vitest-canvas-mock": "0.3.3"
	}
}
