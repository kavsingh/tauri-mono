{
	"name": "app",
	"description": "a tauri app",
	"version": "1.0.0-dev.0",
	"type": "module",
	"license": "MIT",
	"scripts": {
		"tdd:ui": "vitest",
		"test": "pnpm test:tauri && pnpm test:ui",
		"test:ci": "pnpm test:ui --silent --coverage",
		"test:ui": "vitest run",
		"test:tauri": "cd src-tauri && cargo test",
		"lint": "cargo clippy --all-targets --all-features && tsc && eslint .",
		"before:dev": "pnpm build:isolation && vite dev",
		"before:build": "pnpm build:isolation && rimraf ./dist && vite build",
		"dev": "tauri dev",
		"build:mac": "tauri build --target universal-apple-darwin",
		"build:win": "tauri build --target x86_64-pc-windows-msvc",
		"build:isolation": "rimraf ./dist-isolation && vite -c vite.isolation.config.ts build",
		"testscript": "node scripts/testscript.ts"
	},
	"dependencies": {
		"@solidjs/router": "0.15.3",
		"@tanstack/solid-query": "5.76.0",
		"@tauri-apps/api": "2.5.0",
		"@tauri-apps/plugin-dialog": "2.2.1",
		"@tauri-apps/plugin-log": "2.4.0",
		"solid-js": "1.9.6",
		"tailwind-merge": "3.3.0",
		"tailwind-variants": "1.0.0"
	},
	"devDependencies": {
		"@solidjs/testing-library": "0.8.10",
		"@tailwindcss/vite": "4.1.6",
		"@tauri-apps/cli": "2.5.0",
		"@testing-library/dom": "10.4.0",
		"@testing-library/jest-dom": "6.6.3",
		"@testing-library/user-event": "14.6.1",
		"@tsconfig/vite-react": "3.4.0",
		"@vitejs/plugin-legacy": "6.1.1",
		"@vitest/coverage-v8": "3.1.3",
		"caniuse-lite": "1.0.30001717",
		"eslint-plugin-jest-dom": "5.5.0",
		"eslint-plugin-solid": "0.14.5",
		"eslint-plugin-testing-library": "7.1.1",
		"eslint-plugin-vitest": "0.5.4",
		"jsdom": "26.1.0",
		"prettier-plugin-tailwindcss": "0.6.11",
		"tailwindcss": "4.1.6",
		"terser": "5.39.0",
		"tw-animate-css": "1.2.9",
		"vite": "6.3.5",
		"vite-plugin-checker": "0.9.3",
		"vite-plugin-solid": "2.11.6",
		"vite-tsconfig-paths": "5.1.4",
		"vitest": "3.1.3",
		"vitest-canvas-mock": "0.3.3"
	}
}
