{
	"name": "app",
	"description": "a tauri app",
	"version": "1.0.0-dev.0",
	"type": "module",
	"license": "MIT",
	"scripts": {
		"tdd:ui": "vitest",
		"test": "pnpm test:tauri && pnpm test:ui",
		"test:ci": "pnpm test:ui --silent --coverage",
		"test:ui": "vitest run",
		"test:tauri": "cd src-tauri && cargo test",
		"lint": "tsc && eslint . && cargo clippy --all-targets --all-features",
		"before:dev": "pnpm build:isolation && vite dev",
		"before:build": "pnpm build:isolation && rimraf ./dist && vite build",
		"dev": "tauri dev",
		"build:mac": "tauri build --target universal-apple-darwin",
		"build:win": "tauri build --target x86_64-pc-windows-msvc",
		"build:isolation": "rimraf ./dist-isolation && vite -c vite.isolation.config.ts build",
		"testscript": "node scripts/testscript.ts"
	},
	"dependencies": {
		"@solidjs/router": "0.15.3",
		"@tanstack/solid-query": "5.89.0",
		"@tauri-apps/api": "2.8.0",
		"@tauri-apps/plugin-dialog": "2.4.0",
		"@tauri-apps/plugin-log": "2.7.0",
		"@tauri-apps/plugin-store": "2.4.0",
		"solid-js": "1.9.9",
		"tailwind-merge": "3.3.1",
		"tailwind-variants": "3.1.1"
	},
	"devDependencies": {
		"@solidjs/testing-library": "0.8.10",
		"@tailwindcss/vite": "4.1.13",
		"@tauri-apps/cli": "2.8.4",
		"@testing-library/dom": "10.4.1",
		"@testing-library/jest-dom": "6.8.0",
		"@testing-library/user-event": "14.6.1",
		"@tsconfig/vite-react": "7.0.1",
		"@vitejs/plugin-legacy": "7.2.1",
		"@vitest/coverage-v8": "3.2.4",
		"@vitest/eslint-plugin": "1.3.12",
		"caniuse-lite": "1.0.30001743",
		"eslint-plugin-better-tailwindcss": "3.7.9",
		"eslint-plugin-jest-dom": "5.5.0",
		"eslint-plugin-solid": "0.14.5",
		"eslint-plugin-testing-library": "7.8.0",
		"jsdom": "27.0.0",
		"tailwindcss": "4.1.13",
		"terser": "5.44.0",
		"tw-animate-css": "1.3.8",
		"vite": "7.1.5",
		"vite-plugin-checker": "0.10.3",
		"vite-plugin-solid": "2.11.8",
		"vite-tsconfig-paths": "5.1.4",
		"vitest": "3.2.4",
		"vitest-canvas-mock": "0.3.3"
	}
}
