{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"jsx": "preserve",
		"jsxImportSource": "solid-js",
		"lib": ["esnext", "dom"],
		"module": "esnext",
		"moduleResolution": "bundler",
		"noEmit": true,
		"paths": { "#*": ["./src/*"] },
		"sourceMap": true
	},
	"exclude": ["**/node_modules"],
	"include": [
		"./src",
		"./src-isolation",
		"./scripts",
		"./*.ts",
		"./*.cjs",
		"./.*.cjs"
	]
}
