{
	"name": "tauri-mono",
	"version": "0.0.0",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git@host.com:your/repo"
	},
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"type": "module",
	"scripts": {
		"dev": "nx dev app --outputStyle stream",
		"test": "nx run-many -t test --outputStyle stream",
		"test:ci": "nx run-many -t test:ci --outputStyle stream",
		"lint": "conc 'nx run-many -t lint --outputStyle stream' 'tombi lint --error-on-warnings'",
		"build:mac": "nx build:mac app",
		"build:win": "nx build:win app",
		"clean:nx": "bun -r exec rm -rf .nx && rm -rf .nx",
		"clean:modules": "bun -r exec rm -rf node_modules && rm -rf node_modules",
		"clean:targets": "bun -r exec rm -rf target && rm -rf target"
	},
	"devDependencies": {
		"@tsconfig/bun": "1.0.10",
		"@tsconfig/strictest": "2.0.8",
		"@types/bun": "1.3.8",
		"@typescript/native-preview": "7.0.0-dev.20260201.1",
		"concurrently": "9.2.1",
		"lefthook": "2.0.16",
		"nx": "22.4.4",
		"oxfmt": "0.27.0",
		"oxlint": "1.42.0",
		"oxlint-tsgolint": "0.11.4",
		"rimraf": "6.1.2",
		"tombi": "0.7.25"
	},
	"packageManager": "bun@1.3.8",
	"trustedDependencies": [
		"lefthook",
		"nx",
		"tombi"
	]
}
