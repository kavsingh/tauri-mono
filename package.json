{
	"name": "tauri-mono",
	"version": "0.0.0",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git@host.com:your/repo"
	},
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"type": "module",
	"scripts": {
		"dev": "conc 'docker compose up --watch app-ui' 'wait-on tcp:5321 && nx dev app --outputStyle stream'",
		"test": "nx run-many -t test --outputStyle stream",
		"test:ci": "nx run-many -t test:ci --outputStyle stream",
		"lint": "conc 'nx run-many -t lint --outputStyle stream' 'tombi lint --error-on-warnings'",
		"build:mac": "nx build:mac app",
		"build:win": "nx build:win app",
		"clean:nx": "rimraf ./**/.nx --glob",
		"clean:modules": "rimraf ./**/node_modules --glob",
		"clean:targets": "rimraf ./**/target --glob"
	},
	"devDependencies": {
		"@tsconfig/bun": "1.0.10",
		"@tsconfig/strictest": "2.0.8",
		"@types/bun": "1.3.9",
		"@typescript/native-preview": "7.0.0-dev.20260212.1",
		"concurrently": "9.2.1",
		"cross-env": "10.1.0",
		"lefthook": "2.1.1",
		"nx": "22.5.0",
		"oxfmt": "0.32.0",
		"oxlint": "1.47.0",
		"oxlint-tsgolint": "0.12.1",
		"rimraf": "6.1.2",
		"tombi": "0.7.28",
		"wait-on": "9.0.4"
	},
	"packageManager": "bun@1.3.9",
	"trustedDependencies": [
		"lefthook",
		"nx",
		"tombi"
	]
}
