{
	"extends": [
		"@tsconfig/node20/tsconfig.json",
		"@tsconfig/strictest/tsconfig.json"
	],
	"compilerOptions": {
		"jsx": "preserve",
		"jsxImportSource": "solid-js",
		"lib": ["esnext", "dom"],
		"module": "esnext",
		"moduleResolution": "bundler",
		"noEmit": true,
		"paths": {
			"ui:*": ["./src/*"],
			"tauri:*": ["./src-tauri/*"]
		},
		"sourceMap": true,
		"target": "esnext",

		// leave the following to eslint
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		// leave to eslint: some extensions delete
		// unreachable code detected via ts too eagerly
		"allowUnreachableCode": true
	},
	"exclude": ["**/node_modules"],
	"include": [
		"./src",
		"./src-isolation",
		"./src-tauri/bindings",
		"./*.ts",
		"./*.js",
		"./*.*.cjs"
	]
}
