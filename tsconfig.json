{
	"extends": "@tsconfig/node18-strictest/tsconfig.json",
	"compilerOptions": {
		"isolatedModules": true,
		"jsx": "preserve",
		"jsxImportSource": "solid-js",
		"lib": ["esnext", "dom"],
		"module": "esnext",
		"noEmit": true,
		"paths": {
			"~/*": ["./src/*"],
			"~bindings/*": ["./src-tauri/bindings/*"]
		},
		"sourceMap": true,
		"target": "esnext"
	},
	"exclude": ["**/node_modules"],
	"include": [
		"./src",
		"./src-isolation",
		"./src-tauri/bindings",
		"./*.ts",
		"./*.mjs"
	],
	"ts-node": {
		"transpileOnly": true,
		"compilerOptions": {
			"isolatedModules": false,
			"lib": ["esnext"],
			"module": "commonjs",
			"target": "es2022"
		}
	}
}
